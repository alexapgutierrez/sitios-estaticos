.Tuits
  background-color white
  &-new
    background-color #F5F8FA
    color #ABB8C2
    text-align center
    font-size 15px
    padding 8px 0
    cursor pointer
    transition all .4s
    border-top 1px solid #e5e5e5
    border-bottom 1px solid #e5e5e5
    &:hover
      background-color #e6ecf0
    p
      margin 0

.goingOn
  background-color #F6F7F8
  padding 10px 0
  &.active
    #twittear
      padding-bottom 30px
      box-sizing content-box
    #panel
      height auto
      opacity 1
    .picture
      display none
  &-goingon
    position relative
    .box
      background-color white
      rounded(21px)
      border 1px solid #e5e5e5
      sombra(none)
      font-size 15px
      margin 0
      font-weight $fontMedium
      +placeholder()
        color $colorSecundario
    .picture
      position absolute
      right 20px
      top 13%
      color $colorSecundario
    &-panel
      opacity 0
      height 0
      padding 20px 0 0
      transition all .3s
      .fa
        color $colorSecundario
        font-size 20px
        border 1px solid transparent
        rounded(5px)
        width 46px
        height 39px
        line-height 39px
        text-align center
        transition all .4s
        cursor pointer
        &:hover
          border 1px solid $colorSecundario
      .twittear
        .caracteres
          font-size 14px
          color #657786
          padding-right 15px

.Tweets
  &-tweet
    padding 10px
    transition all .4s
    border-bottom 1px solid #e5e5e5
    &:hover
      background-color #e6ecf0
    &-result
      .user
        font-weight $fontBold
        .username, .min
          font-weight $fontRegular
          color #657786
          padding-left 5px
        .min
          &:before
            content "â€¢"
            font-size 12px
            padding-right 5px
      .tweet
        font-size 15px
      .icons
        .fa
          color #657786
          cursor pointer
          font-size 17px
          padding 15px 35px 0 0
          transition all .4s
          &.fa-comment-o
            &:hover
              color #1da1f2
          &.fa-retweet
            &:hover
              color #17bf63
          &.fa-heart-o
            &:hover
              color #e0245e
          &.fa-envelope-o
            &:hover
              color #ABB8C2
    &-arrow
      .fa
        color #657786
        font-size 21px
