@import "nib"

/* ------------------------------------------------
 ## Variable
------------------------------------------------ */

$grisClaro = #E6ECF0
$color = #14171a
$colorSecundario = #ABB8C2
$azulPrincipal = #55acee

$font = 'Roboto', sans-serif
$fontThin = 100
$fontLight = 300
$fontRegular = 400
$fontMedium = 500
$fontBold = 700
$fontBlack = 900

/* ------------------------------------------------
 ## Mixins
------------------------------------------------ */

redondo()
  border-radius 50%

rounded(br)
  border-radius br

sombra(bx)
  box-shadow bx

placeholder()
  &::-webkit-input-placeholder
    {block}
  &:-moz-placeholder
    {block}
  &::-moz-placeholder
    {block}
  &:-ms-input-placeholder
    {block}

/* ------------------------------------------------
 ## Tags
------------------------------------------------ */

body
  background-color $grisClaro
  font-size 16px
  color $color
  font-family $font

p
  margin 0

/* ------------------------------------------------
 ## General class
------------------------------------------------ */

.Content
  padding-top 10px

.widget
  margin-bottom 10px
  background-color white

.widget-title
  color $color
  font-size 16px
  font-weight $fontBlack
  &-extra
    font-weight $fontRegular
    font-size 13px
    padding-left 5px
    color $colorSecundario
    &:before
      content "â€¢"
      padding-right 3px
      color $color
      font-size 10px

.cover-small
  redondo()
  width 40px

.cover-medium
  redondo()

.btn-primary
  background-color #BBC6CE
  border-radius 21px
  color white
  font-size 15px
  font-weight $fontBold
  line-height 1
  padding 9px 17px 7px


.btn-secundary
  display block
  font-weight $fontBlack
  font-size 13px
  color $colorSecundario
  border 1px solid $colorSecundario
  rounded(21px)
  padding 5px 25px
  transition all .4s
  cursor pointer
  &:hover
    background-color #F6F7F8

/* ------------------------------------------------
 ## Layouts
------------------------------------------------ */

@import "topbar.styl"
@import "profile-trends.styl"
@import "follow-copy.styl"
@import "tuits.styl"
