.topBar
  background-color white
  border-bottom 1px solid rgba(0,0,0,0.15)
  padding 2px 0 0
  z-index 9999
  &-icon
    .fa-twitter
      font-size 25px
  &-menu
    .menu
      .item
        a
          color #66757F
          display block
          font-size 13px
          font-weight $fontBold
          border-bottom 2px solid transparent
          transition all .4s
          .fa
            font-size 19px
            padding-right 3px
          span
            display inline-block
            vertical-align middle
          &:hover
            border-bottom 2px solid #ABB8C2
            color #ABB8C2
        &.activeitem
          a
            border-bottom 2px solid #ABB8C2
  &-extra
    &-search
      position relative
      .input
        background-color #f5f8fa
        border 1px solid #e6ecf0
        color #14171a
        margin 0
        display block
        font-size 12px
        height 32px
        line-height 16px
        padding 8px 32px 8px 12px
        rounded(21px)
        sombra(none)
        transition all .2s ease-in-out
        width 100%
        +placeholder()
          color #14171a
        &:focus
          background-color white
      .fa-search
        color #66757f
        position absolute
        right 17px
        top 22%

.sticky-wrapper
  &.is-sticky
    .topBar
      z-index 99999 !important
